= form_for @os_type do |f|
  - if @os_type.errors.any?
    #error_explanation
      h2 = "#{pluralize(@os_type.errors.count, "error")} prohibited this os_type from being saved:"
      ul
        - @os_type.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :require_security_software
    = f.check_box :require_security_software
  .actions = f.submit
